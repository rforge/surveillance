    title = "Bayesian nowcasting during the {STEC} {O104:H4} outbreak in {Germany}, 2011", 
    author = c(authors["MH"],person("Matthias", "an der Heiden")),
    journal = "Biometrics",
    year = "2014",
    volume = "70",
    number = "4",
    pages = "993--1002",
    doi = "10.1111/biom.12194"
)


